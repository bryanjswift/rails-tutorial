<h1>All Articles</h1>
<p>
  <%= link_to 'Create New Article', new_article_path %>
</p>
<ol>
  <% @articles.each do |article| %>
    <li>
      <h2><%= article.title %></h2>
      <p><%= article.text %></p>
      <p>
        <%= link_to 'Show', article_path(article) %>
      </p>
    </li>
  <% end %>
</ol>
